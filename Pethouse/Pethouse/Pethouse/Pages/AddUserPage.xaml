<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pethouse.Pages.AddUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create a new account!" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Username: " x:Name="nameEntry"></Entry>
            <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="Password:"></Entry>
            <Entry x:Name="pwcheckEntry" IsPassword="True"  Placeholder="Verify Password:"></Entry>
            <Button x:Name="submitButton" Text="Submit" Clicked="submitButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>