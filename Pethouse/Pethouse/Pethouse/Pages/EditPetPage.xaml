<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pethouse.Pages.EditPetPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit pet" 
                HorizontalOptions="CenterAndExpand" />
            <!--<Button x:Name="photoButton" Text="Change photo"></Button>-->
            <Entry Placeholder="{Binding Petname}" x:Name="nameEntry"></Entry>
            <Picker Title="" x:Name="racePicker" SelectedIndexChanged="racePicker_SelectedIndexChanged" ></Picker>
            <Picker Title="" x:Name="breedPicker"  ></Picker>
            <Label Text="Select date of birth: "></Label>
            <DatePicker x:Name="bdatePicker" ></DatePicker>
            <Button Text="Save" x:Name="saveButton" Clicked="Save_Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>