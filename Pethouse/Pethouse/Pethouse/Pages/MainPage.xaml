<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pethouse.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Your pets:" FontSize="Title" HorizontalOptions="CenterAndExpand"></Label>
            <Button Text="Placeholder"></Button>

            <StackLayout>
                <Label Text="My dogs:"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" />
                <ListView x:Name="dogListView"></ListView>
             </StackLayout>
                <StackLayout>
                <Label Text="My cats:" ></Label>
                    <CollectionView x:Name="catListView" ></CollectionView>
                </StackLayout>
            <StackLayout>
                <CollectionView x:Name="testListView"></CollectionView></StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>